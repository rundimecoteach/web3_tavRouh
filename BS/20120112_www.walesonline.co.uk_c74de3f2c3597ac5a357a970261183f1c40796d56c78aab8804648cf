<p>function GetURLVars()</p>
<p>{</p>
<p>	</p>
<p>	var args = new Object();</p>
<p>	a_pairs = document.location.search.split(/[?&]/);</p>
<p>	for (i = 0; i < a_pairs.length; i ++) {</p>
<p>		</p>
<p>		a_bits = a_pairs[i].split('=');</p>
<p>		if ((a_bits.length == 2) && (a_bits[0].length)) {</p>
<p>			if (args[a_bits[0]] == undefined) {</p>
<p>				</p>
<p>				args[a_bits[0]] = unescape(a_bits[1]);</p>
<p>			} else {</p>
<p>				</p>
<p>				args[a_bits[0]] = args[a_bits[0]] + ',' + unescape(a_bits[1]);</p>
<p>			}</p>
<p>		}</p>
<p>	}</p>
<p></p>
<p>	return args;</p>
<p>}</p>
