<p>function getWeiboDaren() {</p>
<p>	var html = [], user = userData,</p>
<p>		userUrl = 'http://t.163.com/' + user.screenName + '?method=click&keyfrom=wenzhang_dr&sitechannel=news';</p>
<p>	html.push('<div class="daren-item">');</p>
<p>	html.push('<div class="avatar">');</p>
<p>	html.push('<a target="_blank" href="' + userUrl + '"><img src="' + user.headPic + '"></img></a>');</p>
<p>	html.push('<a href="javascript:;" target="_self" hideFocus="true" class="wb-article-btn wb-article-folow" onclick="WbApp.WbFollow(\'' + user.screenName + '\',this,{followfrom:\'wenzhang_DR\',keyfrom:\'wenzhang_DR\',sitechannel:\'news\'}); return false;">已关注</a>');</p>
<p>	html.push('</div><div class="author-info">');</p>
<p>	html.push('<a target="_blank" class="author-name" href="' +userUrl + '">' + user.name + '</a>');</p>
<p>	if(user.daren == true) {</p>
<p>		html.push('<a class="daren-icon" href="http://t.163.com/rank/daren" title="网易微博 i 认证"></a>');</p>
<p>	}</p>
<p>	html.push('<a class="talk-to" href="javascript:;" target="_self" onclick="WbApp.WbSay(\'' + user.name + '\',{keyfrom:\'wenzhang_DR\',sitechannel:\'news\'}); return false;">对Ta说</a><br />');</p>
<p>	html.push('<span class="followers">' + user.follower + '人关注他</span></div>');</p>
<p>	html.push('<div class="reason">' + user.reason + '</div></div>');</p>
<p>	return html.join('');</p>
<p>}</p>
<p>// 微博消息</p>
<p>function getWeiboMsg(data) {</p>
<p>	var html = [], user = data.user, </p>
<p>		userUrl = 'http://t.163.com/' + user.screenName + '?method=click&keyfrom=wenzhang_mr&sitechannel=news',</p>
<p>		tweetUrl = 'http://t.163.com/' + user.screenName + '/status/' + data.tweetId + '?method=click&keyfrom=wenzhang_mr&sitechannel=news';</p>
<p>	html.push('<div class="msg-item"><div class="avatar">');</p>
<p>	html.push('<a target="_blank" href="' + userUrl + '"><img src="' + user.headPic + '"></img></a>');</p>
<p>	html.push('<a href="javascript:;" target="_self" hideFocus="true" class="wb-article-btn wb-article-folow" onclick="WbApp.WbFollow(\'' + user.screenName + '\',this,{followfrom:\'wenzhang_DR\',keyfrom:\'wenzhang_DR\',sitechannel:\'news\'}); return false;">已关注</a></div>');</p>
<p>	html.push('<div class="status-info"><div class="info-top">');</p>
<p>	html.push('<a target="_blank" class="author-name" href="' + userUrl + '">' + user.name + '</a>');</p>
<p>	if(user.daren == true) {</p>
<p>		html.push('<a class="daren-icon" href="http://t.163.com/rank/daren" title="网易微博 i 认证"></a>');</p>
<p>	}</p>
<p>	html.push('：<span class="status">' + data.tweet + '</span>');</p>
<p>	html.push('<span class="status-link">[<a target="_blank" href="' + tweetUrl + '">查看微博</a>]</span></div>');</p>
<p>	html.push('<div class="option-item"><a href="javascript:;" target="_self" onclick="WbApp.WbRetweet(\'' + data.tweetId + '\',{keyfrom:\'wenzhang_DR\',sitechannel:\'news\'}); return false;">转发</a> | ');</p>
<p>	html.push('<a href="javascript:;" target="_self" onclick="WbApp.WbComment(\'' + data.tweetId + '\',{keyfrom:\'wenzhang_DR\',sitechannel:\'news\'}); return false;">评论</a></div>');</p>
<p>	html.push('</div></div>');</p>
<p>	return html.join('');			</p>
<p>}</p>
<p>function renderDaren(data) {</p>
<p>	document.write(getWeiboDaren());</p>
<p>}</p>
<p>function renderMsg(data) {</p>
<p>	document.write(getWeiboMsg(data));</p>
<p>}</p>
<p>function getCoords(el) {</p>
<p>	var box = el.getBoundingClientRect(),</p>
<p>		doc = el.ownerDocument,</p>
<p>		body = doc.body,</p>
<p>		html = doc.documentElement,</p>
<p>		clientTop = html.clientTop || body.clientTop || 0,</p>
<p>		clientLeft = html.clientLeft || body.clientLeft || 0,</p>
<p>		top = box.top + (self.pageYOffset || html.scrollTop || body.scrollTop) - clientTop,</p>
<p>		left = box.left + (self.pageXOffset || html.scrollLeft || body.scrollLeft) - clientLeft;</p>
<p>	return { 'top': top, 'left': left };</p>
<p>};</p>
