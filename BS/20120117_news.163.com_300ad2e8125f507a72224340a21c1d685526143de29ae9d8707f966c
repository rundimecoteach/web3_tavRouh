<p>var ydwi=0;</p>
<p>var ydwlengthLimit = 13;</p>
<p>function ydwShow() {</p>
<p>  var html = "";</p>
<p>  var len = 0;</p>
<p>  var i = ydwi;</p>
<p>  while (true) {</p>
<p>    if (i >= ydwords.length) {</p>
<p>      i=0;</p>
<p>    }</p>
<p>    var kw = ydwords[i];</p>
<p>    if (kw.length > ydwlengthLimit) {</p>
<p>      i++;</p>
<p>      if (i == ydwi) {</p>
<p>        break;</p>
<p>      }</p>
<p>      continue;</p>
<p>    }</p>
<p>    len += kw.length;</p>
<p>    if (len > ydwlengthLimit) {</p>
<p>      ydwi = i;</p>
<p>      break;</p>
<p>    }</p>
<p>    if (window.encodeURIComponent) {</p>
<p>      var eq = encodeURIComponent(kw);</p>
<p>    } else {</p>
<p>      var eq = kw;</p>
<p>    }</p>
<p>    html += "<a target='_blank' href='http://www.youdao.com/search?q=" + eq + "&keyfrom=163.page.hotword'>" + kw + "</a>&nbsp;";</p>
<p>    len++;</p>
<p>    i++;</p>
<p>    if (i == ydwi) {</p>
<p>      break;</p>
<p>    }</p>
<p>  }</p>
<p>  document.getElementById("key").innerHTML = html;</p>
<p>  var t = setTimeout("ydwShow()", 5000);</p>
<p>}</p>
