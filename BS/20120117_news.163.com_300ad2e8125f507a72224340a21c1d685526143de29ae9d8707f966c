<p>				</p>
<p>					if ( !evt.relatedTarget && evt.fromElement ) {</p>
<p>						evt.relatedTarget = evt.fromElement == target ? evt.toElement : evt.fromElement;</p>
<p>					}</p>
<p>					var parent = evt.relatedTarget;</p>
<p>					while ( parent && parent != this ) {</p>
<p>						try { parent = parent.parentNode; }</p>
<p>						catch(e) { parent = this; }</p>
<p>					}</p>
<p>					if( parent != this ){</p>
<p>						this.style.display = 'none';</p>
<p>					}</p>
<p>				}</p>
