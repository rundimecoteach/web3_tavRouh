<p>            function clicktselect(e){</p>
<p>                e = e || window.event;</p>
<p>                e.cancelBubble = true;</p>
<p>                var name = this.innerHTML;</p>
<p>                var txt = document.createTextNode(name);</p>
<p>                selected.removeChild(selected.firstChild);</p>
<p>                selected.appendChild(txt);</p>
<p>                select_main.style.display = "none";</p>
<p>                var title = this.getAttribute("title");</p>
<p>                if (title == "新闻") {</p>
<p>                  Y_T("ttimesort").value="10";</p>
<p>                  Y_T("tsearchsite").value="163.com";</p>
<p>                } else {</p>
<p>                  Y_T("ttimesort").value="0";</p>
<p>                  Y_T("tsearchsite").value="";</p>
<p>                }</p>
<p>            }</p>
