<p>    var maufactureName = $('#carSearchFrm #make option:selected').text();</p>
<p>    var modelId = $('#carSearchFrm #model option:selected').val();</p>
<p>    var modelName = $('#carSearchFrm #model option:selected').text();</p>
<p>    if(modelName == "Any Model")</p>
<p>    {</p>
<p>        modelName = "";</p>
<p>    }</p>
<p>    var minPrice = $('#carSearchFrm #priceFrom option:selected').val();</p>
<p>    var maxPrice = $('#carSearchFrm #priceTo option:selected').val();</p>
<p>    </p>
<p>    var strUrl = "http://www.motorstoday.co.uk/results.aspx?location=Edinburgh&keywords=&manufacturerid=" + manufactureId + "&manufacturername=" + maufactureName + "&modelid=" + modelId + "&modelname=" + modelName + "&minage=-1&maxage=-1&minprice=" + minPrice + "&maxprice=" + maxPrice + "&maxmileage=-1&radius=10&type=3&sortorder=2&page=1&searchtype=1&derivitive=&fueltype=-1&bodytype=-1&doors=-1&colour=-1&enginesize=-1&transmission=-1";</p>
