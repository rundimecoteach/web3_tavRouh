<p>	function movead(position) {</p>
<p>		var tolocation = $('.oasad[data-ad='+position+']');</p>
<p>		var fromlocaition = $('.lowad[data-ad='+position+']');</p>
<p>	</p>
<p>		if(tolocation.length != 1) return;</p>
<p>		if(fromlocaition.length != 1) return;</p>
<p>	</p>
<p>		// remove scripts so they don't rerun</p>
<p>		fromlocaition.find('script').remove();</p>
<p>	</p>
<p>		// move the nodes to the proper locations</p>
<p>		tolocation.append( fromlocaition.detach() );</p>
<p>	}</p>
