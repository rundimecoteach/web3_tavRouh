<p>function question_post_list(i){</p>
<p>	var sourceHtml = "" , tempHtml = "" , xHtml = "" , page = 1 ;</p>
<p>	sourceHtml += '<div class="news2_view_response_area">';</p>
<p>	sourceHtml += '	<div class="news2_view_response_bg"><!--content--></div>';</p>
<p>	sourceHtml += '	<div class="news2_view_response_title">留言：</div>';</p>
<p>	sourceHtml += '	<div class="news2_view_response_content"><!--account-->│<!--post_time--></div>';</p>
<p>	sourceHtml += '</div>';</p>
<p>	$.getJSON("aJax/question_action.asp",{"index":"2","id":"1405","p":i},function(data){</p>
<p>		if (data.rsc > 0){</p>
<p>			$("#question_post_count").html(data.rsc+" 篇回響");</p>
<p>			if(data.total_page > data.page){</p>
<p>				page = i + 1;</p>
<p>				$("#questoin_post_page").html('<a href="javascript:question_post_list('+page+');">下一頁</a>');</p>
<p>			}else{</p>
<p>				$("#questoin_post_page").html('&nbsp;');</p>
<p>			};</p>
<p>			$.each(data.item_list, function(ii,items){</p>
<p>				tempHtml = sourceHtml ;</p>
<p>				tempHtml = tempHtml.replace(/<!--content-->/g,items.content) ;</p>
<p>				tempHtml = tempHtml.replace(/<!--account-->/g,items.account) ;</p>
<p>				tempHtml = tempHtml.replace(/<!--post_time-->/g,items.post_time) ;</p>
<p>				xHtml += tempHtml ;</p>
<p>			});</p>
<p>			if(i == 1){</p>
<p>				$("#question_post_list").html(xHtml);</p>
<p>			}else{</p>
<p>				$("#question_post_list:last").append(xHtml);</p>
<p>			};</p>
<p>		};</p>
<p>	});</p>
<p>};</p>
