<p>        if ($(window).scrollTop()>adv_h) {</p>
<p>          if (!$("#adv_fixed").hasClass("fixed-block")) $("#adv_fixed").addClass("fixed-block");</p>
<p>        } else {</p>
<p>          if ( $("#adv_fixed").hasClass("fixed-block")) $("#adv_fixed").removeClass("fixed-block");</p>
<p>        }</p>
<p>      });</p>
<p>    }</p>
<p>  });</p>
<p></p>
