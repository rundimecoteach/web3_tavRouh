<p>/*实现图片的按比例缩放*/ </p>
<p>function DrawImage(ImgD, iwidth, iheight) { </p>
<p>    var image = new Image(); </p>
<p>    image.src = ImgD.src; </p>
<p>    if(image.width > 0 && image.height > 0){ </p>
<p>        if(image.width / image.height >= iwidth / iheight){ </p>
<p>            if(image.width > iwidth){ </p>
<p>                ImgD.width = iwidth; </p>
<p>                ImgD.height = (image.height * iwidth) / image.width; </p>
<p>            } </p>
<p>            else{ </p>
<p>                ImgD.width = image.width; </p>
<p>                ImgD.height = image.height; </p>
<p>            } </p>
<p>            // ImgD.alt = image.width + "×" + image.height; </p>
<p>        } </p>
<p>        else{ </p>
<p>            if(image.height > iheight){ </p>
<p>                ImgD.height = iheight; </p>
<p>                ImgD.width = (image.width * iheight) / image.height; </p>
<p>            } </p>
<p>            else{ </p>
<p>                ImgD.width = image.width; </p>
<p>                ImgD.height = image.height; </p>
<p>            } </p>
<p>            // ImgD.alt = image.width + "×" + image.height; </p>
<p>        } </p>
<p>    } </p>
<p></p>
<p>} </p>
