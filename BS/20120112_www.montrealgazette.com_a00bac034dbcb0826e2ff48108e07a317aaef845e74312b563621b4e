<p>function preCheckMontrealgazette100643($)</p>
<p>{</p>
<p>    if (navigator.userAgent && ( navigator.userAgent.indexOf("iPad") != -1 || navigator.userAgent.indexOf("PlayBook") != -1 ))</p>
<p>    {</p>
<p>        return 0;</p>
<p>    }</p>
<p>    var metamatch = document.getElementsByTagName("meta");</p>
<p>    for (var i=0; i < metamatch.length; i++) {</p>
<p>    if (metamatch[i].name == "keywords") {</p>
<p>    if (metamatch[i].content.match(/breaking/)) </p>
<p>      {</p>
<p>       return 0;</p>
<p>      }</p>
<p>    }</p>
<p>    }</p>
<p></p>
<p>    loc = window.location + '';</p>
<p></p>
<p>    if (loc.match(/\/(cars|jobs|homes)\/.+/i))</p>
<p>    {</p>
<p>        return 0;</p>
<p>    }</p>
<p>    else if (loc.match(/(story.html).*/i))</p>
<p>    {</p>
<p>         return 1;</p>
<p>    }</p>
<p>    </p>
<p>    return 0;</p>
<p>}</p>
