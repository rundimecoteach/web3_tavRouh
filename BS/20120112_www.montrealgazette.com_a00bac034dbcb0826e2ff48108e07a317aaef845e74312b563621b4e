<p>			function footerSearch() {</p>
<p>				var q = document.getElementById("f").value.replace(/ /g,"+");</p>
<p>				if (q.length == 0) {</p>
<p>					alert("Please enter your search criteria");</p>
<p>					return;</p>
<p>				}</p>
<p>				document.location.href="/search/search.html?q=" + escape(q);</p>
<p>			}</p>
