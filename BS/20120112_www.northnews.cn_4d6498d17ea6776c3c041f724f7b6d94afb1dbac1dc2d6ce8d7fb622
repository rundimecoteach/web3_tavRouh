<p>function login() {</p>
<p>	var username = $('#loginUsername').val();</p>
<p>	var password = $('#loginPassword').val();</p>
<p>	if ( username == '') {</p>
<p>		alert('用户名不能为空');</p>
<p>		return false;</p>
<p>	}</p>
<p>	if ( password == '') {</p>
<p>		alert('密码不能为空');</p>
<p>		return false;</p>
<p>	}</p>
<p></p>
<p>	$.getJSON(APP_URL+'?app=member&controller=index&action=ajaxlogin&username='+encodeURIComponent(username)+'&password='+encodeURIComponent(password)+'&jsoncallback=?', function(json){</p>
<p>		if(json.state) {</p>
