<p>//取评论函数</p>
<p>function getCommemt(topicid,wrapper,callback) {</p>
<p>	if(!topicid) return ;</p>
<p>	$.getJSON(APP_URL+'?app=comment&controller=comment&action=get&topicid='+topicid+'&jsoncallback=?', function(json){</p>
<p>		if(json.total) {</p>
<p>			for (var i=0,item;item=json.data[i++];) {</p>
<p>                var html = commentTpl;</p>
<p>				for (var key in item) {</p>
<p>					html = html.replace(new RegExp('{'+key+'}',"gm"), item[key]);</p>
<p>				}</p>
<p>				wrapper.append(html);</p>
<p>			}</p>
<p>		}</p>
<p>		typeof callback == 'function' && callback(json);</p>
<p>	});</p>
<p>}</p>
