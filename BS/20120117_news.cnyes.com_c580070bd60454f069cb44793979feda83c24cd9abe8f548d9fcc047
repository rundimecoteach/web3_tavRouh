<p>function goOpenSearch(keyword)</p>
<p>{</p>
<p>    var tempU = '' ; </p>
<p>    </p>
<p>    var q = ""</p>
<p>    </p>
<p>    if (keyword == '')</p>
<p>    {</p>
<p>        q = document.getElementById('search').value</p>
<p>    }</p>
<p>    else</p>
<p>    {</p>
<p>        q = keyword</p>
<p>    }</p>
<p>    if (q == '請輸入新聞關鍵字' || q == '')</p>
<p>    {</p>
<p>        q = '頭條'</p>
<p>    }</p>
<p>    tempU = '/search.aspx?q=' + encodeURI( q ) + '&D=7&P=1&1=1'</p>
<p>    </p>
<p>    openFullPage(tempU)</p>
<p>}</p>
