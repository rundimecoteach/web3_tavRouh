<p>function getMobileURL(){</p>
<p>	var mobileURL = "http://m.ctv.ca";	</p>
<p>	var hub = "Health";</p>
<p>	var hub = hub.toLowerCase();</p>
<p>	if(hub == "topstoriesv2")</p>
<p>		hub = "topstories";</p>
<p>	if(hub == "entertainmentv2")</p>
<p>		hub = "entertainment";</p>
<p>	if(hub == "nationalnews")</p>
<p>		hub = "thedesk";</p>
<p>	if(hub == "scitech")</p>
<p>		hub = "tech";</p>
<p>	var slug = "headphone-pedestrians-accidents-120117";</p>
<p>	var date = "20120117";</p>
<p>	mobileURL = mobileURL + "/" + hub + "/" + date + "/" + slug + ".html";</p>
<p>	return mobileURL;</p>
<p>}</p>
