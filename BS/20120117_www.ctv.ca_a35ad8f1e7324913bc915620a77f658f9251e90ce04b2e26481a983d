<p>        var pnn = "searchnews";//document.getElementById("searchText").innerHTML;</p>
<p>        var totalString = "ctvnews : " + chec(s1) + chec(s2) + chec(s3) + pnn.toLowerCase();</p>
<p>        Tracking.SetPageName(totalString.toLowerCase());</p>
<p>        Tracking.SetSubSections(cap(s1), cap(s2), cap(s3));</p>
<p>        Tracking.TrackSearch(document.getElementById("searchText").innerHTML, 0);</p>
<p>        Tracking.Track();    </p>
<p>    }</p>
<p>	else if (locBar.indexOf("/search") != -1)</p>
<p>    {</p>
<p>        Tracking.SetSiteSection( "ctvhome" );</p>
<p>        var s1 = "searchctv_ca";</p>
<p>        var s2 = "hub";</p>
<p>        var s3 = null;</p>
<p>        var pnn = "searchctv_ca";//document.getElementById("searchText").innerHTML;</p>
<p>        var totalString = "ctvhome : " + chec(s1) + chec(s2) + chec(s3) + pnn.toLowerCase();</p>
<p>        Tracking.SetPageName(totalString.toLowerCase());</p>
<p>        Tracking.SetSubSections(cap(s1), cap(s2), cap(s3));</p>
<p>        Tracking.TrackSearch(document.getElementById("searchText").innerHTML, 0);</p>
<p>        Tracking.Track();    </p>
<p>    }</p>
<p>    else if (locBar.indexOf("www.tsnn.ca/ctvnews") != -1 || locBar.indexOf("www.tsn.ca/ctvnews") != -1)</p>
<p>    {</p>
<p></p>
<p>    }    </p>
<p>    else</p>
<p>    {</p>
<p></p>
<p>    }</p>
<p>}</p>
