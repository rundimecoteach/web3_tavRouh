<p>function doZoom(size) </p>
<p>{ </p>
<p>	var des=document.all?document.all['des']:document.getElementById('des');</p>
<p>	var title=document.all?document.all['title']:document.getElementById('title');</p>
<p>	var about=document.all?document.all['about']:document.getElementById('about');</p>
<p>	var article_info=document.all?document.all['article_info']:document.getElementById('article_info');</p>
<p>	if(size == 1){</p>
<p>		if(des)</p>
<p>		{</p>
<p>			des.style.fontSize='18px';</p>
<p>		}</p>
<p>		about.style.fontSize='14px';</p>
<p>		title.style.fontSize='24px';</p>
<p>		article_info.style.fontSize='16px';</p>
<p>	}else if(size == 2){</p>
<p>		if(des)</p>
<p>		{</p>
<p>			des.style.fontSize='14px';</p>
<p>		}</p>
<p>		about.style.fontSize='12px';</p>
<p>		title.style.fontSize='22px';</p>
<p>		article_info.style.fontSize='14px';		</p>
<p>	}else{</p>
<p>		if(des)</p>
<p>		{</p>
<p>			des.style.fontSize='12px';</p>
<p>		}</p>
<p>		about.style.fontSize='10px';</p>
<p>		title.style.fontSize='18px';</p>
<p>		article_info.style.fontSize='12px';</p>
<p>	}</p>
<p>}</p>
