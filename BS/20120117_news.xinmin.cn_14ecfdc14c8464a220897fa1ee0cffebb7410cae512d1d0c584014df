<p>function loadCommont(indexId,indexUrl)</p>
<p>{</p>
<p>	var phprpc = new PHPRPC_Client('http://comment.xinmin.cn/index.php?app=common&controller=Comment.Service', ['listAction','countAction']);</p>
<p>	phprpc['listAction']</p>
<p>	(</p>
<p>		'comment', '13362314', 10, 1,</p>
<p>		function(text)</p>
<p>		{	</p>
<p>			$('commentCountB').innerHTML  = text.page.totalCount;</p>
<p>			var html = iname = '';</p>
<p>			try</p>
<p>			{</p>
<p>				for(var i = 0; i < text.record.length; i++)</p>
<p>				{</p>
<p>					if(text.record[i].nickname)</p>
<p>					{</p>
<p>						iname = '<a href="http://t.xinmin.cn/jump.php?var='+text.record[i].username+'&type=username" target="_blank">'+text.record[i].nickname+'</a>';</p>
<p>					}</p>
<p>					else</p>
<p>					{</p>
<p>						if(text.record[i].username)</p>
<p>						{</p>
<p>							iname = '<a href="http://t.xinmin.cn/jump.php?var='+text.record[i].username+'&type=username" target="_blank">'+text.record[i].username+'</a>';</p>
<p>						}</p>
<p>						else</p>
<p>						{</p>
<p>							var ip = text.record[i].ip;</p>
<p>							ip = ip.replace(/[\d\s]+$/,"*");</p>
<p>							iname = 'IP：'+ ip;</p>
<p>						}</p>
<p>					}</p>
<p>					if(text.record[i].area != "")</p>
<p>					{</p>
<p>						area = '新民网'+ text.record[i].area +'网友';</p>
<p>					}else{</p>
<p>						area = '新民网网友';							</p>
<p>					}</p>
<p>					html += '<p><font style="color:#c20001">'+ area +'</font>&nbsp;[&nbsp;'+iname+'&nbsp;]</p>';</p>
<p>					html += '<p>'+ text.record[i].content +'&nbsp;&nbsp;[&nbsp;'+ text.record[i].create_datetime +'&nbsp;]</p>';</p>
<p>					if(i != text.record.length-1)</p>
<p>					{</p>
<p>						html += '<p class="dian2"><img src="http://image.xinmin.cn/template/www.xinmin.cn/200907/images/dian.jpg"></p>';	</p>
<p>					}</p>
<p>				}</p>
<p>				$('commentLi').innerHTML = html;</p>
<p>				$('dian').style.display = "";</p>
<p>				$('comment').style.display = "";</p>
<p>			}</p>
<p>			catch (e)</p>
<p>			{</p>
<p>			}</p>
<p>		}</p>
<p>	)</p>
<p>}</p>
