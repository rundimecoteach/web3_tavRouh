<p>								rpc.addCommentForRpcAction('13362314','重庆政务微博集群平台“重庆微政务”今开通上线',document.URL,Cookie.read("XMPS_USERNAME"),Cookie.read("XMPS_NICKNAME"),$('content').get('value'),function (result) {</p>
<p>									//alert('ok')</p>
<p>								})</p>
<p>							}</p>
<p>							$('pl_close').addEvent('click', function(){</p>
