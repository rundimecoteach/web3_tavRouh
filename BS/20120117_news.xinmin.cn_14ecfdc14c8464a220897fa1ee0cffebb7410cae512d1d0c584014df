<p>			</p>
<p>			var uid  = Cookie.read('Ynr_Tuid');</p>
<p>			var u_name = Cookie.read('XMPS_USERNAME');</p>
<p>			var nickname = Cookie.read("XMPS_NICKNAME");</p>
<p>			</p>
<p>			if((uid==null) || (u_name==null)){</p>
