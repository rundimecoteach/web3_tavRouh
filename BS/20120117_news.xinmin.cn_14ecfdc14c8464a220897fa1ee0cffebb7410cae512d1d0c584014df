<p>	function keyWord_check2(op)</p>
<p>	{</p>
<p>		var str = $("login_username").value;</p>
<p>		if(op == "on")</p>
<p>		{</p>
<p>			if(str == "" || str =="用户名/手机号/邮箱")</p>
<p>			{</p>
<p>				$("login_username").value = "";</p>
<p>				$("login_username").style.color='#000000'</p>
<p>			}</p>
<p>		}</p>
<p>		if(op == "no")</p>
<p>		{</p>
<p>			if(str == "" || str =="用户名/手机号/邮箱")</p>
<p>			{</p>
<p>				$("login_username").style.color='#999999'</p>
<p>				$("login_username").value = "用户名/手机号/邮箱";</p>
<p>			}</p>
