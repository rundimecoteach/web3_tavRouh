<p>$('.watchlist-overlay-add-stock a.submit').bind('click', globe.investor.watchlistAddAttempt);</p>
<p>}else{</p>
<p>globe.investor.initWatchlistOverlay();</p>
<p>setTimeout(globe.investor.watchlistOverlay,2500);</p>
<p>}</p>
<p>}else{</p>
<p>$("#userlogin-form-watchlist-promo").css({display:"block"}).fadeIn(600);</p>
<p>$("#userlogin").css({display:"none"});</p>
<p>$("#usertools").css({display:"none"});</p>
