<p>	form.comment_username.style.backgroundColor = '#ffffff';</p>
<p>	if (form.comment_password) form.comment_password.style.backgroundColor = '#ffffff';</p>
<p>	form.comment_text.style.backgroundColor = '#ffffff';</p>
<p>	</p>
<p>	if (form.comment_username.value == '' || form.comment_username.value == 'имя')</p>
<p>	{</p>
<p>		errors.push("Не введено имя");</p>
<p>		form.comment_username.style.backgroundColor = '#ffff99';</p>
<p>	}</p>
<p>	</p>
<p>	if (form.comment_password && (form.comment_password.value == '' || form.comment_password.value == 'пароль'))</p>
<p>	{</p>
<p>		errors.push("Не введен пароль");</p>
<p>		form.comment_password.style.backgroundColor = '#ffff99';</p>
<p>	}</p>
<p>	</p>
<p>	if (form.comment_text.value == '')</p>
