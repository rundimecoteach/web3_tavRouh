<p>function showDisclaimer()</p>
<p>{</p>
<p>	var info = document.getElementById('bottom_info');</p>
<p>	var disc = document.getElementById('bottom_disclaimer');</p>
<p>	if (!info) return;</p>
<p>	if (!disc) return;</p>
<p></p>
<p>	disc.interval = setInterval("slideDisclaimer()", 10);</p>
<p>}</p>
<p></p>
<p>function slideDisclaimer()</p>
<p>{</p>
<p>    var info = document.getElementById('bottom_info');</p>
<p>    var disc = document.getElementById('bottom_disclaimer');</p>
<p>    if (!info) return;</p>
<p>    if (!disc) return;</p>
<p></p>
<p>	var h_info = info.clientHeight;</p>
<p>	if (h_info == 0) h_info = info.offsetHeight; // IE workaround</p>
<p>	if (h_info > 1) h_info = h_info - 1;</p>
<p></p>
<p>	var h_disc = disc.clientHeight;</p>
<p>	if (h_disc < disc.scrollHeight) h_disc = h_disc + 1;</p>
<p></p>
<p>	if ((h_info == 1) && (h_disc == disc.offsetHeight))</p>
<p>	{</p>
<p>		clearInterval(disc.interval);</p>
<p>	}</p>
<p>	else</p>
<p>	{</p>
<p>		info.style.height = h_info + "px";</p>
<p>		disc.style.height = h_disc + "px";</p>
<p>	}</p>
<p>}</p>
<p></p>
<p>function showInfo()</p>
<p>{</p>
<p>	var info = document.getElementById('bottom_info');</p>
<p>	var disc = document.getElementById('bottom_disclaimer');</p>
<p>	if (!info) return;</p>
<p>	if (!disc) return;</p>
<p></p>
<p>	info.interval = setInterval("slideInfo()", 10);</p>
<p>}</p>
<p></p>
<p>function slideInfo()</p>
<p>{</p>
<p>	var info = document.getElementById('bottom_info');</p>
<p>	var disc = document.getElementById('bottom_disclaimer');</p>
<p>	if (!info) return;</p>
<p>	if (!disc) return;</p>
<p></p>
<p>	var h_info = info.clientHeight;</p>
<p>	h_info = h_info + 1;</p>
<p></p>
<p>	var h_disc = disc.clientHeight;</p>
<p>	h_disc = h_disc - 1;</p>
<p></p>
<p>	if (h_disc < 1)</p>
<p>	{</p>
<p>		clearInterval(info.interval);</p>
<p>	}</p>
<p>	else</p>
<p>	{</p>
<p>		info.style.height = h_info + "px";</p>
<p>		disc.style.height = h_disc + "px";</p>
<p>	}</p>
<p>}</p>
