<p>  ((path)?";path="+path:"") +</p>
<p>  ((domain)?";domain="+domain:"") +</p>
<p>  ((secure)?";secure":"");</p>
<p>  document.cookie=curCookie;</p>
<p>  if(flag!="null")history.go(0);</p>
<p>}</p>
